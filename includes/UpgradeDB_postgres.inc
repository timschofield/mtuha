function OutputResult($msg, $status) {
	if ($status == 'error') {
		$_SESSION['Updates']['Errors']++;
		$_SESSION['Updates']['Messages'][] = $msg;
	} else if ($status == 'success') {
		$_SESSION['Updates']['Successes']++;
	} else {
		$_SESSION['Updates']['Warnings']++;
	}
}

